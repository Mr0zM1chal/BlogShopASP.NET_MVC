<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    @System.Web.Optimization.Scripts.Render("~/Content/themes/base/css")

</head>
<div>
    <header>
        <div style="overflow: hidden;">
            <a id="koszykHeaderLink" href="">
                Koszyk (<span id="koszyk-naglowek-ilosc-elementow">@Html.Action("GetQuantityOFcart", "Cart")</span>)
                <span></span>
            </a>
           @Html.Partial("_LoginPartial")

            <div style='float:right'>
                <a id="indexHeaderLogo" href="link">
                    <img src="@Url.Content("~/Content/Images/logo.png")" class="bottom-right" />
                </a>
            </div>
            <div style='float:left'>
                <a id="index2HeaderLogo" href="link">
                    <img src="@Url.Content("~/Content/Images/logo2.png")" class="bottom-left" />
                </a>
            </div>

        </div>
        <nav class="kategorieHorizontal">
            <ul>
                <li>
                    <a href="@Url.Action("IndexBlog", "Blog", new {nazwa = "IndexBlog"})" style="background-image: url(../Content/Kategorie/aspnet.png); ">
                        Blog
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Home", new {nazwa = "Index"})" style="background-image: url(../Content/Kategorie/csharp.png); ">
                        Sklep
                    </a>
                </li>
                <li>
                    <a href="link" style="background-image: url(../Content/Kategorie/css.png); ">
                        Zaloguj
                    </a>
                </li>
            </ul>
            <br />
            <br />
            <br />
        </nav>
    </header>
        
    <div>
        @RenderBody()
    </div>

    <footer>
        <nav>
            <ul>
                <li><a href="@Url.Action("StronyStatyczne","Home", new {nazwa = "Onas"})", style="")>O nas</a></li>
                <li><a href="@Url.Action("StronyStatyczne","Home", new {nazwa = "Pomoc"})", style="")>Pomoc</a></li>
                <li><a href="@Url.Action("StronyStatyczne","Home", new {nazwa = "Regulamin"})", style="")>Regulamin</a></li>
                <li><a href="@Url.Action("StronyStatyczne","Home", new {nazwa = "Kontakt"})", style="")>Kontakt</a></li>
            </ul>
        </nav>
        <div id="footerLogo">
        </div>
        <div id="footerCopyright">
            Copyright &copy; 2019
        </div>
    </footer>
    @RenderSection("Scripts", required : false)
</div>
</html>
